<div class="container">
    <h1>Contract</h1>
    <div class="row">
        <div class="col-9">  
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Job Number</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Contract Date</th>
                        <th scope="col">Salesman</th>

                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td><%= @contract.job_number %></td>
                        <td><%= @contract.job_name %></td>
                        <td><%= number_to_currency(@contract.job_amount) %></td>
                        <td><%= @contract.milestone_1_date.strftime("%-m/%-d/%Y") %></td>
                        <td><%= @contract.salesman.full_name %></td>
                        <td><%= link_to "Edit", edit_contract_path(@contract), :class=>"btn btn-primary btn-sm" %></td>
                        <td><%= link_to "Delete", contract_path(@contract), :class=> "btn btn-primary btn-sm",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></td>
                    </tr>
                
                </tbody>
            </table>    
                
        </div>
    </div>

</div>                

