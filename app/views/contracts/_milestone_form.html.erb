<%= form_with model: contract, url: modify_contract_path(contract) do |form| %>
   <div class="container">


    <tr>
        <td><%= contract.job_number %></td>
        <td><%= contract.job_name %></td>
        <td><%= contract.milestone_1_date.strftime("%-m/%-d/%Y") %></td>
        <td><%= contract.milestone_2_date %></td>
        <td><%= form.check_box :milestone_2_complete, class: "form-check form-check-inline" %></td>
        <td><%= contract.milestone_3_date %></td>
        <td><%= form.check_box :milestone_3_complete, class: "form-check form-check-inline" %></td>
        <td><%= contract.milestone_4_date %></td>
        <td><%= form.check_box :milestone_4_complete, class: "form-check form-check-inline" %></td>
        <td><%= form.submit %></td>                
    </tr>


 <% end %>

                   