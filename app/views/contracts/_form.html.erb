<% if contract.errors.any? %>
    <% contract.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

<%= form_with model: contract do |form| %>
   <div class="container">
   <div class="row g-3" style="margin-bottom: 30px">
    <div class="col-md-3">
      <%= form.label "Order" %>
      <%= form.check_box :milestone_2_complete, class: "form-check form-check-inline" %>
    </div>
      <div class="col-md-3">
      <%= form.label "Install" %>
      <%= form.check_box :milestone_3_complete, class: "form-check form-check-inline" %>
    </div>
      <div class="col-md-3">
      <%= form.label "Final" %>
      <%= form.check_box :milestone_4_complete, class: "form-check form-check-inline" %>
    </div>
   </div>
   <hr />
   <br />
      <div class="row g-3">
        <div class="col-md-3">
          <%= form.text_field :job_number ,class: "form-control", placeholder: "Job Number"%>
        </div>
        <div class="col-md-9">
          <%= form.text_field :job_name ,class: "form-control", placeholder: "Job Name"%>
        </div>
        <div class="col-3">
          <%= form.text_field :job_amount ,class: "form-control", placeholder: "Contract Amount"%>
        </div>
        <div class="col-3">
          <%= form.date_field :milestone_1_date ,class: "form-control", placeholder: "Contract Date"%>
        </div>
        <div class="col-3">
          <%= form.text_field :referral_name ,class: "form-control", placeholder: "Referral Name"%>
        </div>
        <div class="col-3">
          <%= form.text_field :referral_amount ,class: "form-control", placeholder: "Referral Percentage"%>
        </div>
        <div class="col-3">
          <%= form.collection_select :salesman_id , Salesman.all, :id, :full_name, {prompt:"Salesman"}, class: "form-control"%>
        </div>

      <div class="col-12">
        <%= form.submit class: "btn btn-primary btn-sm" %>
      </div>

    </div>
    </div>
   
 
     
        
    
   
 <% end %>