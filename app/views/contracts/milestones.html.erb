<div class="container">
<h1>Milestones</h1>
  <div class="row">
    <div class="col-9">  
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Job Number</th>
            <th scope="col">Name</th>
            <th scope="col">Contract Date</th>
            <th scope="col">Order Date</th>
            <th scope="col">Order Complete</th>
            <th scope="col">Install Date</th>
            <th scope="col">Install Complete</th>
            <th scope="col">Final Date</th>
            <th scope="col">Final Complete</th>

          </tr>
        </thead>
          <tbody>

              <% @contracts.each do |contract| %>
                  <tr>
                      <td><%= link_to contract.job_number,edit_milestone_path(contract) %></td>
                      <td><%= contract.job_name %></td>
                      <td><%= contract.milestone_1_date.strftime("%-m/%-d/%Y") %></td>
                      <td><%= contract.milestone_2_date.try(:strftime, "%-m/%-d/%Y") %></td>
                      <td><%= check_box_tag "milestone_2_complete", contract.milestone_2_complete, contract.milestone_2_complete, disabled: true %></td>
                      <td><%= contract.milestone_3_date.try(:strftime, "%-m/%-d/%Y") %></td>
                      <td><%= check_box_tag "milestone_3_complete", contract.milestone_3_complete, contract.milestone_3_complete, disabled: true, class: "checkbox" %></td>
                      <td><%= contract.milestone_4_date.try(:strftime, "%-m/%-d/%Y") %></td>
                      <td><%= contract.milestone_4_complete %></td>
                     
                  </tr>
              <% end %>
            </tbody>
      </table>
      </div>
  </div>



</div>



